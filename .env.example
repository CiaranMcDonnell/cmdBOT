# Discord Bot Configuration Example
# Rename this file to .env and fill in your values

#===========================================
# Required Bot Configuration
#===========================================
# Your bot's token from Discord Developer Portal
DISCORD_TOKEN=your_bot_token_here

# Your bot's client ID from Discord Developer Portal
CLIENT_ID=your_client_id_here

# Your Discord user ID (for bot owner commands)
OWNER_ID=your_discord_id_here

#===========================================
# Server Configuration (Optional)
#===========================================
# Main guild ID for production
GUILD_ID=

# Testing guild ID for development
DEV_GUILD_ID=

#===========================================
# Development Settings
#===========================================
# Set to 'true' to enable debug logging
DEBUG_MODE=false

# Environment: development/production
NODE_ENV=development

#===========================================
# Database Configuration (Optional)
#===========================================
# Database connection settings if using a database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=password
DB_NAME=discord_bot

#===========================================
# Feature Flags (Optional)
#===========================================
# Enable/disable specific features
ENABLE_MUSIC=false
ENABLE_MODERATION=true
ENABLE_ECONOMY=false

#===========================================
# API Keys (Optional)
#===========================================
# Add any external API keys your bot uses
# GIPHY_API_KEY=
# WEATHER_API_KEY=
# YOUTUBE_API_KEY=

#===========================================
# Logging Configuration (Optional)
#===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

#===========================================
# Cache Settings (Optional)
#===========================================
CACHE_DURATION=3600
MAX_CACHE_SIZE=100

#===========================================
# Rate Limiting (Optional)
#===========================================
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_TIME=60
